Checks: >
  *,
  -*-magic-numbers,
  -*-uppercase-literal-suffix,
  -altera-struct-pack-align,
  -bugprone-reserved-identifier,
  -bugprone-suspicious-include,
  -cert-dcl37-c,
  -cert-dcl51-cpp,
  -google-runtime-references,
  -hicpp-multiway-paths-covered,
  -hicpp-signed-bitwise,
  -llvm-header-guard,
  -llvmlibc-*,

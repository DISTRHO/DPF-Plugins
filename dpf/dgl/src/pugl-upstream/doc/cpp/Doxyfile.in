PROJECT_NAME           = Pugl
PROJECT_BRIEF          = "A minimal portable API for embeddable GUIs"

QUIET                  = YES
WARN_AS_ERROR          = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_NO_PARAMDOC       = NO

JAVADOC_AUTOBRIEF      = YES

CASE_SENSE_NAMES       = YES
EXCLUDE_SYMBOLS        = pugl::detail
EXTRACT_LOCAL_CLASSES  = NO
EXTRACT_PRIVATE        = NO
HIDE_IN_BODY_DOCS      = YES
HIDE_UNDOC_CLASSES     = YES
HIDE_UNDOC_MEMBERS     = YES
REFERENCES_LINK_SOURCE = NO

GENERATE_HTML          = NO
GENERATE_LATEX         = NO
GENERATE_XML           = YES
XML_PROGRAMLISTING     = NO
SHOW_FILES             = NO

MACRO_EXPANSION        = YES
PREDEFINED             = PUGL_API \
                         PUGL_DISABLE_DEPRECATED \
                         PUGL_CONST_API= \
                         PUGL_CONST_FUNC=

RECURSIVE              = YES
STRIP_FROM_PATH        = @PUGL_SRCDIR@
INPUT                  = @PUGL_SRCDIR@/include \
                         @PUGL_SRCDIR@/bindings/cpp/include

OUTPUT_DIRECTORY       = @DOX_OUTPUT@
